html 
    head
        title=feed.title
        link(rel="icon" href="https://www.tradingview.com/static/images/favicon.ico")
        style
            include ../style.css
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet")
        link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    body 
        div(class="container justify-content-between align-items-center activity" style="display: flex;")
            span
                img(src="https://user-images.githubusercontent.com/5462382/34194692-9a517de4-e51f-11e7-8af9-46f9ea4cf555.png" style="height: 50px; width: 50px;")
                span(class="activity-done" style="font-size: 30px; padding-left: 10px;")=feed.title
            span(class="icons" style="justify-content: end;")
                a(href="https://www.tradingview.com/feed/?stream=crypto")
                    i(class="fa fa-link")
                    span(style="padding-left: 10px;")="RSS Feed"
        div(class="container")
            p=feed.description
        div(class="container mt-5")
            div(class="row")
                div(class="col-md-12")
                    div
                        i(class="fa fa-clock-o")
                        span(class="ml-2")=feed.lastBuildDate
                        span(class="ml-1 mt-1 text-black-50 date-time") (last updated)
                    div(class="mt-3")
                        ul(class="list list-inline")
                            each object in objects
                                a(href=object.link)
                                    li(class="d-flex justify-content-between")
                                        div(class="d-flex flex-row align-items-center")
                                            i(class="fa fa-check-circle checkicon")
                                            div(class="ml-2")
                                                h6(class="mb-0")=object.title
                                                div(class="d-flex flex-row mt-1 text-black-50 date-time" style="font-size: 15px;")
                                                    p=object.content

                                                div(class="d-flex flex-row mt-1 text-black-50 date-time")
                                                    div
                                                        i(class="fa fa-calendar-o")
                                                        span(class="ml-2")=object.pubDate
                                            
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js")
